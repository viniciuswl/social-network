{
    "swaggerDefinition": {
        "info": {
            "description": "This is a sample server",
            "title": "Swagger",
            "version": "1.0.0"
        },
        "host": "localhost:4000",
        "basePath": "/",
        "produces": [
            "application/json",
            "application/xml"
        ],
        "schemes": ["http", "https"],
        "securityDefinitions": {
            "JWT": {
                "type": "apiKey",
                "in": "header",
                "name": "Authorization",
                "description": ""
            }
        }
    },
    "basedir": "__dirname",
    "files": ["./routes/**/*.js", "./models/**/*.js"] 
}